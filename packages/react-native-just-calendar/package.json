{
  "name": "@bertsky/react-native-just-calendar",
  "version": "2.0.2",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run lint",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "create-changeset": "changeset",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci",
    "lint": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wnadurski/react-native-just-calendar.git"
  },
  "author": "Wojciech Nadurski",
  "license": "MIT",
  "description": "A simple and lightweight React Native library with Calendar component, optimized for marking dates.",
  "keywords": [
    "react-native",
    "calendar"
  ],
  "homepage": "https://github.com/wnadurski/react-native-just-calendar",
  "bugs": {
    "url": "https://github.com/wnadurski/react-native-just-calendar/issues"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.17.0",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~18.3.12",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "react": "18.3.1",
    "react-native": "^0.76.5",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.18.1"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "fp-ts": "^2.16.9"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": "^0.64.0"
  }
}
